	r'd'ca
	.endm
	.endm

	.macro	PROFILE	a
	CALL	GETST
	CALL	a
	CALL	GETEND
	CALL	PDEFEL
	.endm

	.macro	MOV	f,g
	LD	A,g
	LD	f,A
	.endm

	.macro	LOOPB	a,b
	LD	A,b
	LD	(a'V),A
	MOV	(a),#0
	LD	A,#0
a	.equ	.-1
a'L:	CP	#0
a'V	.equ	.-1
	JP	Z,a'X
	.endm

	.macro	ENDLPB	a
	INCM	(a)
	JP	a'L
a'X	.equ	.
	.endm

